<h1>Listing posts</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Title</th>
    <th>Text</th>
    <th>Source</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.category.name %></td>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= post.source %></td>
    <td><%= post.tags %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
