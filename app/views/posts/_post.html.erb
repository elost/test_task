<div class="post-item">
  <div class="post-rating" id=<%= "rate_#{post.id}" %>>
    <%= render(:partial => 'posts/rate', :locals => {:post => post}) %>
  </div>
  <div class="post-content">
    <div class="post-title">
      <%= link_to post.title, post %>
    </div>
    <div class="post-text">
      <p><%= post.text %></p>
    </div>
    <div class="post-source">
      Source: <%= post.source %>
    </div>
    <div class="post-tags">
      Tags: <%= post.tags %>
    </div>
  </div>
</div>
